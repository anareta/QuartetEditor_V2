<UserControl x:Class="QuartetEditor.Views.Controls.HorizontalInsertionCursor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuartetEditor.Views.Controls"
             mc:Ignorable="d" 
             MinWidth="40"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="LayoutRoot">
        <Grid Margin="0,-5,0,-5">
            <Polygon Points="0,0 0,8 8,4"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Fill="{StaticResource ResourceKey=HighlightBrush}">
            </Polygon>
            <Rectangle Fill="{StaticResource ResourceKey=HighlightBrush}" 
                       VerticalAlignment="Center" 
                       Margin="0,0" 
                       Stroke="{StaticResource ResourceKey=HighlightBrush}"
                       Height="1" 
                       StrokeThickness="0"/>
            <Polygon Points="0,0 -8,4 0,8"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Center"
                     Fill="{StaticResource ResourceKey=HighlightBrush}">
            </Polygon>
        </Grid>
    </Grid>
</UserControl>
