<UserControl x:Class="QuartetEditor.Views.Controls.EditBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuartetEditor.Views.Controls"
             mc:Ignorable="d" 
             PreviewDragOver="UserControl_PreviewDragOver"
             MinWidth="40"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border Name="_TextBlockBorder"
                BorderThickness="1.5"
                Visibility="Hidden"
                Height="{Binding ActualHeight, ElementName=_TextBlock}"
                BorderBrush="{StaticResource ResourceKey=HighlightBrush}" />

        <TextBlock Name="_TextBlock" 
                   Margin="0,0,0,0"/>

        <TextBox Name="_TextEditor"
                 BorderThickness="0"
                 KeyDown="TextEditor_KeyDown"
                 LostFocus="TextEditor_LostFocus"
                 LostKeyboardFocus="TextEditor_LostKeyboardFocus"
                 TextBlock.FontSize="{Binding FontSize,
                                              ElementName=TextBlock}"
                 Visibility="Collapsed" />
        <Ellipse Name="_Mark" Fill="#1BA1E2" Width="5" Height="5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-8,0,0,0"/>
        <local:HorizontalInsertionCursor x:Name="_InsertCursor" 
                                         Visibility="Hidden"
                                         Margin="0,-3,0,-3"/>
    </Grid>
</UserControl>
